{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "outDir": "node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "translator.ts"
  ],
  "exclude": [
    "scripts/**/*",
  ]
}